@require './config'
@require './code'
@require './custom-blocks'
@require './arrow'
@require './wrapper'
@require './toc'

@import url('https://fonts.googleapis.com/css?family=IBM+Plex+Sans')
@import url('https://fonts.googleapis.com/css?family=IBM+Plex+Mono')


html, body
  padding 0
  margin 0
  background-color #fff

body
  font-family "IBM Plex Sans", Roboto, Oxygen, Ubuntu, Cantarell, "Fira Sans", "Droid Sans", "Helvetica Neue", sans-serif
  -webkit-font-smoothing antialiased
  -moz-osx-font-smoothing grayscale
  font-size 16px
  color $textColor

.page
  padding-left $sidebarWidth
  @media (min-width: 1401px)
    padding-right $sidebarWidth

.navbar
  position fixed
  z-index 20
  top 0
  left 0
  right 0
  height $navbarHeight
  box-sizing border-box

.sidebar-mask
  position fixed
  z-index 9
  top 0
  left 0
  width 100vw
  height 100vh
  display none

.small
  @apply text-sm

a.button
  @apply px-4 py-2 bg-orange-600 text-white
  &.extended
    display block
    text-align center
  &.green
    @apply bg-green-600 text-white
    display inline-block
  &.red
    @apply bg-red-600 text-white

.sidebar
  font-size 16px
  width $sidebarWidth
  position fixed
  z-index 10
  margin 0
  top $navbarHeight
  left 0
  bottom 0
  box-sizing border-box
  border-right 1px solid $borderColor
  overflow-y auto

{$contentClass}:not(.custom)
  @extend $wrapper
  > *:first-child
    margin-top $navbarHeight

  a:hover
    text-decoration underline

  p.demo
    padding 1rem 1.5rem
    border 1px solid #ddd
    border-radius 4px

  img
    max-width 100%

  a
    word-break break-word
    text-decoration underline

  ul,
  ol
    a
      text-decoration none


{$contentClass}.custom
  padding 0
  margin 0

  img
    max-width 100%

a
  font-weight 500
  @apply text-blue-800
  text-decoration none

p a code
  font-weight 400
  color $accentColor

kbd
  background #eee
  border solid 0.15rem #ddd
  border-bottom solid 0.25rem #ddd
  border-radius 0.15rem
  padding 0 0.15em

blockquote
  font-size 1rem
  border-left .4rem solid #dfe2e5
  margin 1rem 0
  @apply p-4 px-6 text-gray-800 rounded-lg shadow bg-yellow-200

  & > p
    margin 0

ul, ol
  padding-left 1.2em

strong
  font-weight 600

h1, h2, h3, h4, h5, h6
  font-weight 600
  line-height 1.25

  {$contentClass}:not(.custom) > &
    margin-top (0.5rem - $navbarHeight)
    padding-top ($navbarHeight + 1rem)
    margin-bottom 0

    &:first-child
      margin-top -1.5rem
      margin-bottom 1rem

      + p, + pre, + .custom-block
        margin-top 2rem

  .content__default > &
    margin-top (0.5rem - $navbarHeight)
    padding-top ($navbarHeight + 1rem)
    margin-bottom 0

    &:first-child
      margin-top -1.5rem
      margin-bottom 1rem

  &:hover .header-anchor
    opacity: 1

h1
  font-size 2.2rem

h2
  font-size 1.65rem
  padding-bottom .3rem
  border-bottom 1px solid $borderColor

h3
  font-size 1.35rem

a.header-anchor
  font-size 0.85em
  float left
  margin-left -0.87em
  padding-right 0.23em
  margin-top 0.125em
  opacity 0

  &:hover
    text-decoration none !important

code, kbd, .line-number
  font-family 'IBM Plex Mono', source-code-pro, Menlo, Monaco, Consolas, "Courier New", monospace
  @apply text-sm

p, ul, ol
  line-height 1.7

hr
  border 0
  border-top 1px solid $borderColor

table
  border-collapse collapse
  margin 1rem 0
  display: block
  overflow-x: auto

tr
  border-top 1px solid #dfe2e5

  &:nth-child(2n)
    background-color #f6f8fa

th, td
  border 1px solid #dfe2e5
  padding .6em 1em

.theme-container
  &.sidebar-open
    .sidebar-mask
      display: block
      background-color #000
      opacity .7

  &.no-navbar
    {$contentClass}:not(.custom) > h1, h2, h3, h4, h5, h6
      margin-top 1.5rem
      padding-top 0

    .sidebar
      top 0

#quickstart
  margin-top -4.6rem

.theme-container.no-sidebar .content a
  text-decoration underline

@media (min-width: ($MQMobile + 1px))
  .theme-container.no-sidebar
    .page
      padding-left 0
      padding-right 0

@media (min-width: 1150px)
  .theme-container.no-sidebar
    .sidebar
      display none

@media (max-width: 719px)
  .links .search-box input
    left 0

@require 'mobile.styl'
